<UserControl
    x:Class="DokumentenManagementSystem.Login.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DokumentenManagementSystem.Login"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <Grid HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <TabControl>
            <!--  Login Tab  -->
            <TabItem Header="Login">
                <Grid
                    MaxWidth="600"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2.2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="36"
                        Foreground="White"
                        Text="Dokumenten Management System"
                        TextWrapping="Wrap"/>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10,2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Benutzer"/>


                    <Border
                        Background="#3d3d3d"
                        Grid.Row="1"
                        BorderBrush="#686868"
                        CornerRadius="5"
                        BorderThickness="1"
                        Grid.Column="1"
                        Margin="2">
                        <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="2"
                        BorderThickness="0"
                        Text="{Binding Path=Benutzer}"/>
                    </Border>


                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10,2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Passwort"/>
                    
                    <Border
                        Background="#3d3d3d"
                        Grid.Row="2"
                        BorderBrush="#686868"
                        CornerRadius="5"
                        BorderThickness="1"
                        Grid.Column="1"
                        Margin="2">
                        <PasswordBox
                            VerticalContentAlignment="Center"
                            Foreground="White"
                            Width="361"
                            Height="28"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="2"
                            CaretBrush="#fff"
                            KeyDown="PasswordBox_KeyDown"
                            PasswordChanged="PasswordBox_PasswordChanged"/>
                    </Border>


                    <Button
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="2"
                        HorizontalAlignment="Right"
                        Command="{Binding Path=LoginCommand}"
                        Content="Login"/>
                    <Button Content="Passwort vergessen?"
                            Command="{Binding Path=ForgotPasswordCommand}"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="2"
                            HorizontalAlignment="left" Width="175"/>

                    <TextBlock Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="2"
                               HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                               Foreground="#822424"
                            FontWeight="Bold"
                               Text="{Binding Path=LoginErrorMessage}"/>
                </Grid>
            </TabItem>

            <!--  Signup Tab  -->
            <TabItem Header="Signup">
                <Grid
                    MaxWidth="600"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2.2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="36"
                        Foreground="White"
                        Text="Dokumenten Management System"
                        TextWrapping="Wrap"/>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10,2"
                        Text="Benutzer"/>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="2"
                        Text="{Binding Path=SignupBenutzer}"/>

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10,2"
                        Text="Passwort"/>
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="2"
                        Text="{Binding Path=SignupPasswort}"/>

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10,2"
                        Text="Passwort Bestätigen"/>
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="2"
                        Text="{Binding Path=SignupPasswortConfirm}"/>

                    <Button
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="2"
                        HorizontalAlignment="Right"
                        Command="{Binding Path=SignUpCommand}"
                        Content="SignUp"/>
                    <TextBlock Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="2"
                               HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                               Foreground="#822424"
                            FontWeight="Bold"
                               Text="{Binding Path=SignupErrorMessage}"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>