<Window x:Class="DokumentenManagementSystem.Dokumentenuebersicht.DownloadCompleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Download Completed" Height="200" Width="600" Background="#1E2D38">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Message Text -->
        <TextBlock Text="Download abgeschlossen. Möchten Sie die Datei oder den Ordner öffnen?" 
                   TextWrapping="Wrap" Margin="10" HorizontalAlignment="Center" FontSize="15" Foreground="White"/>

        <!-- Buttons with smaller font and reduced size -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Datei öffnen" Width="140" Margin="5" FontSize="10" Click="OpenFileButton_Click"/>
            <Button Content="Ordner öffnen" Width="140" Margin="5" FontSize="10" Click="OpenFolderButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
